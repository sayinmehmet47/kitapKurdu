    "@types/validator": "^13.7.17",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
